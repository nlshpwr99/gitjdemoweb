
pipeline {

	agent any
	
	 tools {
        maven 'MAVEN_HOME' 
        jdk 'JAVA_HOME'
    }

	stages {
	
	stage('Cheking initialization') {
            steps {
                sh 'mvn --version'
                sh 'java -version'
            }
        }
        
		
		stage('Compile Stage') {
			steps {
					sh 'mvn clean compile'
				
			}
		}
		
		stage('Testing Stage') {
			steps {
					sh 'mvn test'
			}
		}
		
		stage('Packaging stage') {
			steps {
					sh 'mvn package'
			}
		}
		
		stage('Deployment Stage') {
			steps {
			sh 'scp -o StrictHostKeyChecking=no target/*.war apatle@10.20.220.168:/home/apatle/Installed_softwares/apache-tomcat-8.5.23/webapps/'
			}
		}
		

	}
	
}
